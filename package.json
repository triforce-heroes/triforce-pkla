{
  "name": "@triforce-heroes/triforce-pkla",
  "description": "Extract and rebuild PKLA (.dat, .tbl) files.",
  "version": "1.0.0",
  "license": "Apache License 2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "rimraf ./dist && tspc -p ./tsconfig.build.json && swc ./dist -d .",
    "udk": "node ./dist/command.js",
    "udk:watch": "tsx watch ./src/command.ts",
    "prettier": "prettier --check ./src ./tests",
    "prettier:fix": "prettier --write ./src ./tests",
    "eslint": "eslint ./src ./tests",
    "eslint:fix": "eslint --fix ./src ./tests",
    "test": "vitest"
  },
  "dependencies": {
    "@rheactor/eslint-config-rheactor": "github:rheactor/eslint-config-rheactor",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.11",
    "@total-typescript/ts-reset": "^0.6.1",
    "@triforce-heroes/triforce-core": "github:triforce-heroes/triforce-core",
    "@types/node": "^22.13.11",
    "@vitest/coverage-v8": "^3.0.9",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "rimraf": "^6.0.1",
    "ts-patch": "^3.3.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-transform-paths": "^3.5.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  }
}
