{
  "name": "@triforce-heroes/triforce-pkla",
  "description": "Extract and rebuild PKLA files.",
  "version": "1.0.0",
  "license": "Apache License 2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc -p ./tsconfig.build.json && swc ./dist -d .",
    "udk": "node ./dist/command.js",
    "udk:watch": "tsx watch ./src/command.ts",
    "prettier": "prettier --check ./src ./tests",
    "prettier:fix": "prettier --write ./src ./tests",
    "eslint": "eslint ./src ./tests",
    "eslint:fix": "eslint --fix ./src ./tests",
    "test": "vitest"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.7",
    "@total-typescript/ts-reset": "^0.6.1",
    "@triforce-heroes/triforce-core": "github:triforce-heroes/triforce-core",
    "@types/node": "^22.13.9",
    "@vitest/eslint-plugin": "^1.1.36",
    "commander": "^13.1.0",
    "eslint": "^9.21.0",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vitest": "^3.0.7"
  }
}
